<?xml version="1.0" encoding="UTF-8"?>
<ROOT>
  <TASK_DEFINITION_LIST>
    <TASK_DEFINITION ID="ENABLED_HUGE_PAGE" SEVERITY="IGNORABLE">
      <EXECUTABLE_INFO TYPE="SHELL">
        <EXTERNAL>
          <NAME VALUE="checkhugepage.sh" /> 
        </EXTERNAL>
        <RESULT_TYPE VALUE="ANALYZED" />
      </EXECUTABLE_INFO>
      <OPERATING_SYSTEM_LIST>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>OEL5</VERSION>
        </OPERATING_SYSTEM>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>RHEL5</VERSION>
        </OPERATING_SYSTEM>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>OEL4</VERSION>
        </OPERATING_SYSTEM>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>RHEL4</VERSION>
        </OPERATING_SYSTEM>
      </OPERATING_SYSTEM_LIST>
    </TASK_DEFINITION>  
    <TASK_DEFINITION ID="HWCLOCK_SHUTDOWN_SYNC" SEVERITY="IGNORABLE">
      <EXECUTABLE_INFO TYPE="SHELL">
        <EXTERNAL>
          <NAME VALUE="shutdown_hwclock_sync.sh" />
        </EXTERNAL>
        <RESULT_TYPE VALUE="ANALYZED" />
      </EXECUTABLE_INFO>
      <OPERATING_SYSTEM_LIST>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>ALL</VERSION>
        </OPERATING_SYSTEM>
      </OPERATING_SYSTEM_LIST>
    </TASK_DEFINITION>
    <TASK_DEFINITION ID="SSHD_SETTING" SEVERITY="IGNORABLE">
      <EXECUTABLE_INFO TYPE="SHELL">
        <EXTERNAL>
          <NAME VALUE="checksshd.sh" /> 
        </EXTERNAL>
        <RESULT_TYPE VALUE="ANALYZED" />
      </EXECUTABLE_INFO>
      <OPERATING_SYSTEM_LIST>
<!-- LINUX (sshd_config owned by root no read access don't run task)-->
<!-- HP-UX -->
        <OPERATING_SYSTEM>
          <TYPE>HP-UX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>ALL</VERSION>
        </OPERATING_SYSTEM>
<!-- AIX -->
        <OPERATING_SYSTEM>
          <TYPE>AIX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>ALL</VERSION>
        </OPERATING_SYSTEM>
<!-- SunOS covers both Sparc64 and X64 -->
        <OPERATING_SYSTEM>
          <TYPE>SunOS</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>ALL</VERSION>
        </OPERATING_SYSTEM>
      </OPERATING_SYSTEM_LIST>
    </TASK_DEFINITION>  
    <TASK_DEFINITION ID="MAX_LOCKED_MEM" SEVERITY="IGNORABLE">
      <EXECUTABLE_INFO TYPE="SHELL">
        <EXTERNAL>
          <NAME VALUE="checkmemlock.sh" /> 
        </EXTERNAL>
        <RESULT_TYPE VALUE="ANALYZED" />
      </EXECUTABLE_INFO>
      <OPERATING_SYSTEM_LIST>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>ALL</VERSION>
        </OPERATING_SYSTEM>
      </OPERATING_SYSTEM_LIST>
    </TASK_DEFINITION>  
    <TASK_DEFINITION ID="ENABLED_AMM" SEVERITY="IGNORABLE">
      <EXECUTABLE_INFO TYPE="SHELL">
        <EXTERNAL>
          <NAME VALUE="checkramfs.sh" /> 
        </EXTERNAL>
        <RESULT_TYPE VALUE="ANALYZED" />
      </EXECUTABLE_INFO>
      <OPERATING_SYSTEM_LIST>
        <OPERATING_SYSTEM>
          <TYPE>LINUX</TYPE>
          <ARCHITECTURE>ALL</ARCHITECTURE>
          <VERSION>ALL</VERSION>
        </OPERATING_SYSTEM>
      </OPERATING_SYSTEM_LIST>
    </TASK_DEFINITION>  
  </TASK_DEFINITION_LIST>
  <TARGET_LIST>
    <SOFTWARE VERSION="11gR2">
      <TARGET ID="STAGE_PRE_CRSINST">
        <TASK_LIST>
          <CONDITION>
            <VAR_TASK ID="ENABLED_AMM" />
            <TASK ID="MAX_LOCKED_MEM" />
          </CONDITION>
          <TASK ID="SSHD_SETTING" />
          <TASK ID="ENABLED_HUGE_PAGE" /> 
          <TASK ID="HWCLOCK_SHUTDOWN_SYNC" /> 
          <TASK ID="CORE_FILE_SETTING" />
        </TASK_LIST>
      </TARGET>
      <TARGET ID="STAGE_POST_CRSINST">
        <TASK_LIST>
          <TASK ID="SSHD_SETTING" /> 
        </TASK_LIST>
      </TARGET>
    </SOFTWARE>
  </TARGET_LIST>
</ROOT>
