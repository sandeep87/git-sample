<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_target_score"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/target"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <in.ccl.photo.PhotoView
            android:id="@+id/img_batting_logo"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" >

            <ImageView
                android:id="@+id/img_score_first_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/score_one"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_score_second_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/img_score_first_position"
                android:background="@drawable/score_one"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_score_third_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/img_score_second_position"
                android:background="@drawable/score_two"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp" >

            <ImageView
                android:id="@+id/img_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/slash" />

            <ImageView
                android:id="@+id/img_first_wicket_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/img_slash"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_second_wicket_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_first_wicket_img"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/txt_overs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Overs "
                android:textColor="#888888" />

            <TextView
                android:id="@+id/txt_second_inning_overs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_overs"
                android:singleLine="true"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/score_batting_stats" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip" >
    </LinearLayout>

    <include layout="@layout/bowler_status" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_livestreaming"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/livescorebtn"
            android:text="Live Streaming"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_score_board"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/livescorebtn"
            android:text="View Scoreboard"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>