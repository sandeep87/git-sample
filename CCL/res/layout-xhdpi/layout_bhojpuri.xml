<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <RelativeLayout
        android:id="@+id/main_layout_bhojpuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- owner one -->

        <RelativeLayout
            android:id="@+id/owner_one_description_bhojpuri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/entire_team_title_bhojpuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="BHOJPURI DABANGGS"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/owner_one_name_one_bhojpuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entire_team_title_bhojpuri"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="AVIKA GROUP LTD"
                android:textColor="@android:color/black" 
                android:textStyle="bold" />

            <TextView
                android:id="@+id/owner_one_data_bhojpuri"
                android:layout_width="240dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_one_name_one_bhojpuri"
                android:layout_marginLeft="2dp"
                android:paddingRight="5dip"
                android:text="@string/owners_lounge_bhojpuri"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/owner_one_image_bhojpuri"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/entire_team_title_bhojpuri"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/owner_one_data_bhojpuri"
                android:src="@raw/anandbihari_yadav" />
                <TextView
                android:id="@+id/owner_two_name_one_bhojpuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
				android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/owner_two_image_bhojpuri"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignRight="@+id/owner_one_image_bhojpuri"
                    android:layout_below="@+id/owner_one_image_bhojpuri"
                  
                android:layout_marginTop="10dp"
                    android:src="@raw/manoj_tiwari" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>