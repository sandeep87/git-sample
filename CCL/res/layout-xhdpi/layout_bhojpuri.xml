<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <RelativeLayout
        android:id="@+id/main_layout_bhojpuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- owner one -->

        <RelativeLayout
            android:id="@+id/owner_one_description_bhojpuri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/entire_team_title_bhojpuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="BHOJPURI DABANGGS"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_one_name_one_bhojpuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entire_team_title_bhojpuri"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Group Delphoenix"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_one_data_bhojpuri"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_one_name_one_bhojpuri"
                android:layout_marginLeft="2dp"
                android:paddingRight="5dip"
                android:text="Group Delphoenix has made far-reaching inroads into technology (e-commerce/e-retail/digital marketing), infrastructure, film&amp;music production, talent management, special events and lifestyle cafes in the short time since its inception. Under the purview of the lifestyle arm; Delphoenix Lifestyles; Internet portals such as 24x7style.com and c4cycle.com have been developed. Group Delphoenix is now foraying into Sports."
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/owner_one_image_bhojpuri"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/owner_one_name_one_bhojpuri"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/owner_one_data_bhojpuri"
                android:src="@raw/prateek_kanakia" />

            <TextView
                android:id="@+id/owner_one_name_two_bhojpuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/owner_one_image_bhojpuri"
                android:layout_marginRight="3dip"
                android:layout_toRightOf="@+id/owner_one_data_bhojpuri"
                android:paddingTop="1dip"
                android:paddingLeft="20dp"
                android:singleLine="false"
                android:text="Mr. Prateek Kanakia"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>