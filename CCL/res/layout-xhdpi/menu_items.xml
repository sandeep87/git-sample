<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/txt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/home_icon"
            android:padding="12dp"
            android:text="@string/home"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_teams"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/teams_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/teams" />

        <TextView
            android:id="@+id/txt_tems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/teams_icon"
            android:padding="12dp"
            android:text="@string/teams"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>
    
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_live_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/livescore_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/livescores" />

        <TextView
            android:id="@+id/txt_livescore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/livescore_icon"
            android:padding="12dp"
            android:text="@string/livescore"
            android:textColor="@color/blue"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_videos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/videos" />

        <TextView
            android:id="@+id/txt_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/video_icon"
            android:padding="12dp"
            android:text="@string/videos"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_photos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/photo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/photos" />

        <TextView
            android:id="@+id/txt_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/photo_icon"
            android:padding="12dp"
            android:text="@string/photos"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />
    <RelativeLayout
        android:id="@+id/layout_downloads"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/downloads_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/downloads" />

        <TextView
            android:id="@+id/txt_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/downloads_icon"
            android:padding="12dp"
            android:text="@string/hot_downloads"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_ownerslounge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/celebrity_calender_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/celebritycalendar" />

        <TextView
            android:id="@+id/txt_celebrity_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/celebrity_calender_icon"
            android:padding="12dp"
            android:singleLine="true"
            android:text="@string/ownerslounge"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />
    <RelativeLayout
        android:id="@+id/layout_ownerslounge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/owner_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lounge" />

        <TextView
            android:id="@+id/txt_owners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/owner_icon"
            android:padding="12dp"
            android:text="@string/ownerslounge"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/layout_calender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#242a38" >

        <ImageView
            android:id="@+id/calender_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/celebritycalendar2013" />

        <TextView
            android:id="@+id/txt_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/calender_icon"
            android:padding="12dp"
            android:singleLine="true"
            android:text="@string/calender"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>
</LinearLayout>