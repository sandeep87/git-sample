<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_news"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:text="@string/news"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_news_btns"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dip" >

        <Button
            android:id="@+id/btn_regional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inningstab_tapped"
            android:singleLine="true"
            android:text="@string/regional_title"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_national"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_regional"
            android:background="@drawable/innings_tab"
            android:singleLine="true"
            android:text="@string/national_title"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/news_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent" >
    </ListView>

</LinearLayout>