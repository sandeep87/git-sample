<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <RelativeLayout
        android:id="@+id/main_layout_karnataka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- owner one -->

        <RelativeLayout
            android:id="@+id/owner_one_description_karnataka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/entire_team_title_karnataka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="KARNATAKA BULLDOZERS"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_one_name_one_karnataka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entire_team_title_karnataka"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="AKK Entertainment Pvt. Ltd."
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_one_data_karnataka"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_one_name_one_karnataka"
                android:layout_marginLeft="2dp"
                android:paddingRight="5dip"
                android:text="Mr. Kheny is the promoter of Nandi Infrastructure Corridor Enterprises LTD. (NICE) which is developing the Bangalore-Mysore Infrastructure Corridor as the owners of this Build-Own-Operate-Transfer (BOOT) project."
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/owner_one_image_karnataka"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/entire_team_title_karnataka"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/owner_one_data_karnataka"
                android:src="@raw/ashok_kheny" />

            <TextView
                android:id="@+id/owner_one_name_two_karnataka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/owner_one_image_karnataka"
                android:layout_marginRight="3dip"
                android:layout_toRightOf="@+id/owner_one_data_karnataka"
                android:paddingTop="1dip"
                android:singleLine="false"
                android:text="Mr. Ashok Kheny"
                android:textColor="@android:color/black" />
        </RelativeLayout>

      
    </RelativeLayout>

</RelativeLayout>