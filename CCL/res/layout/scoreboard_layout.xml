<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

   <!--  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" > -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <RelativeLayout
                android:id="@+id/layout_scoreboard_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/titlescoreboard" >

                <TextView
                    android:id="@+id/first_inns_team_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/first_inns_team_txt"
                    android:paddingTop="13dip"
                    android:text="@string/vs"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/second_inns_team_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_vs"
                    android:padding="5dip"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_innings_btns"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_scoreboard_title"
                android:paddingTop="3dip" >

                <Button
                    android:id="@+id/btn_first_innings"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inningstab_tapped"
                    android:paddingLeft="35dip"
                    android:paddingRight="34dip"
                    android:text="@string/first_inns"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_second_innings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_first_innings"
                    android:background="@drawable/innings_tab"
                    android:paddingLeft="35dip"
                    android:paddingRight="35dip"
                    android:text="@string/second_inns"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_innings_scoreview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_innings_btns"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/txt_inningsteam_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!--
                     <ImageView
                    android:id="@+id/img_innings_logo"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/teluguwarriors_logo_scoreboard_bowling"
                    android:padding="20dip" />
                -->

                <TextView
                    android:id="@+id/txt_innings_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dip" >

                    <ListView
                        android:id="@+id/list_innings"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dip"
                        android:fadingEdge="none"
                        android:listSelector="@android:color/transparent"
                        android:scrollbars="none" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_bowling_teamdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_innings_scoreview"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/txt_bowlingteam_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!--
                     <ImageView
                    android:id="@+id/img_bowlingteam_logo"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bengaltigerslogo_fullscoreboard"
                    android:padding="20dip" />
                -->

                <TextView
                    android:id="@+id/txt_bowling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/bowling"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_bowler_innings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_bowling_teamdetails"
                android:paddingTop="5dip" >

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout_bowler_innings_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bowlerstitle_scorecard"
                    android:paddingTop="5dip"
                    android:shrinkColumns="*"
                    
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
              >

                        <!--
             <RelativeLayout
            android:id="@+id/bowling_team_statistics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_score"
            android:paddingRight="5dp" >
                        -->

                        <TextView
                            android:id="@+id/bowling_statistics"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"              
                            android:gravity="center_vertical"
                            android:text="@string/bowling"
                            android:textColor="@color/dark_grey" />

                        <TextView
                            android:id="@+id/overs_statistics"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/bowling_statistics"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/overs"
                           android:textColor="@color/dark_grey"/>

                        <TextView
                            android:id="@+id/mdns_statistics"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/overs_statistics"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/mdns"
                                 android:textColor="@color/dark_grey" />

                        <TextView
                            android:id="@+id/runs_statistics"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/mdns_statistics"
                            android:gravity="center_vertical|center_horizontal"
                            android:singleLine="true"
                            android:text="@string/runs"
                                  android:textColor="@color/dark_grey" />

                        <TextView
                            android:id="@+id/wkts_statistics"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/runs_statistics"
                            android:gravity="center_vertical|center_horizontal"
                            android:singleLine="true"
                            android:text="@string/wickets"
                                   android:textColor="@color/dark_grey" />
                        <!-- </RelativeLayout> -->
                    </TableRow>
                </TableLayout>
