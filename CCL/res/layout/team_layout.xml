<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_hover"
    tools:context=".MainActivity" >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView android:id="@+id/team_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAMS"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="#C0C0C0"
            android:text="TEAMS"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_one" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_two" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/team_view_pager"
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:layout_height="70dp" />
            </RelativeLayout>
            <include layout="@layout/team_pointer"/>
                      <RelativeLayout
                android:id="@+id/team_desc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="67dp"
                android:background="@drawable/mumbai_desc" >

                <ImageView
                    android:id="@+id/team_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/mumbai" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>