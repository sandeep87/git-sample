<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_hover"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/team_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teams"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/team_page_indicator_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dip" >

                <ImageView
                    android:id="@+id/team_page_one_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/scroll_currentpage" />

                <ImageView
                    android:id="@+id/team_page_two_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/scroll" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/team_title"
                android:layout_marginBottom="5dp"
                android:background="#C0C0C0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/team_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingRight="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/team_desc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="55dp" >

                <include layout="@layout/team_pointer" />

                <TextView
                    android:id="@+id/txt_team_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/background_light"
                    android:padding="5dip"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_theteam"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_team_name"
                    android:background="#C0C0C0"
                    android:padding="3dip"
                    android:text="@string/team_title"
                    android:textColor="@android:color/black" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/team_member_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="135dip"
                    android:layout_below="@id/txt_theteam"
                    android:background="@android:color/background_light" />

                <RelativeLayout
                    android:id="@+id/layout_team_ambassadors"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_member_pager" >

                    <TextView
                        android:id="@+id/txt_brand_ambassadors"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#C0C0C0"
                        android:padding="3dip"
                        android:text="@string/ambassadors_title"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/team_ambassadors_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="120dip"
                    android:layout_below="@id/layout_team_ambassadors"
                    android:background="@android:color/background_light" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>