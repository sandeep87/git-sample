<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ambassador_gallery_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <in.ccl.photo.PhotoView
        android:id="@+id/img_ambassador"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/txt_ambassador_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_ambassador"
        android:paddingLeft="3dp"
        android:textColor="@android:color/black"
       android:textSize="12sp" />

   <!--  <TextView
        android:id="@+id/txt_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_person_name"
        android:paddingLeft="3dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" /> -->


    <TextView
        android:id="@+id/error_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="30dp"
        android:text="@string/error_title"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>