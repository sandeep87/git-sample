<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >

        <TextView
            android:id="@+id/txt_banner_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/banner_title"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/banner_page_indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/page_one_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll_currentpage" />

            <ImageView
                android:id="@+id/page_two_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll" />

            <ImageView
                android:id="@+id/page_three_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/banner_view_pager"
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:layout_below="@id/txt_banner_title"
            android:background="@drawable/content_bg" />

        <TextView
            android:id="@+id/txt_gallery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner_view_pager"
            android:layout_marginTop="5dp"
            android:text="@string/photos"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/photo_page_indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/banner_view_pager"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/page_one_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll_currentpage" />

            <ImageView
                android:id="@+id/page_two_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll" />

            <ImageView
                android:id="@+id/page_three_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/photo_view_pager"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/txt_gallery_title"
            android:background="@drawable/content_bg" />

        <TextView
            android:id="@+id/txt_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_view_pager"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/videos"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/video_page_indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/photo_view_pager"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/page_one_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll_currentpage" />

            <ImageView
                android:id="@+id/page_two_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll" />

            <ImageView
                android:id="@+id/page_three_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/scroll" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/video_view_pager"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@id/txt_video_title"
            android:background="@drawable/content_bg" />
    </RelativeLayout>

</RelativeLayout>