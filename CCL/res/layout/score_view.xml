<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/score_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/team_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Target 130/9 (20overs)"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/req_runs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_score"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="SCORE:19 runs to win"
        android:textColor="@android:color/white"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bengalore_tigers_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/score_first_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/score_one"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/score_second_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/score_first_position"
                android:background="@drawable/score_one"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/score_third_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/score_second_position"
                android:background="@drawable/score_two"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/slash" />

            <ImageView
                android:id="@+id/score_wickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/slash"
                android:background="@drawable/wicket_six" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/overs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Overs "
                android:textColor="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/overs"
                android:singleLine="true"
                android:text="18.2"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/score_batting_stats"/>
        <RelativeLayout
        android:id="@+id/bowling_team_statistics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_score" >

        <TextView
            android:id="@+id/bowling_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="BOWLING"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overs_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@+id/bowling_statistics"
            android:gravity="center_vertical"
            android:text="OVS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/extras_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/overs_statistics"
            android:gravity="center_vertical"
            android:text="EXTS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wkts_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/extras_statistics"
            android:gravity="center_vertical"
            android:text="WKTS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mdns_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/wkts_statistics"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="MDNS"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/striking_bowler_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/bowler_statics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="VENKATESH"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bowler_overs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/bowler_statics"
            android:gravity="center_vertical"
            android:text="12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bowler_extras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/bowler_overs"
            android:gravity="center_vertical"
            android:text="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bowler_wkts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/bowler_extras"
            android:gravity="center_vertical"
            android:text="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bowler_mdns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/bowler_wkts"
            android:gravity="center_vertical"
            android:text="0"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_gravity="right" >

        <Button
            android:id="@+id/btn_view_score_board"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/view_score" />
    </LinearLayout>

</LinearLayout>