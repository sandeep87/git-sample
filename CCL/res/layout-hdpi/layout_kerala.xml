<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_team_owners"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <RelativeLayout
        android:id="@+id/main_layout_kerala_strikers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- owner one -->

        <RelativeLayout
            android:id="@+id/owner_one_description_kerala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/entire_team_title_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="KERALA STRIKERS"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_one_name_one_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entire_team_title_kerala"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="PADMASREE LT.COL.V.MOHANLAL"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_one_data_kerala"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_one_name_one_kerala"
                android:layout_marginLeft="2dp"
                android:paddingRight="5dip"
                android:text="@string/owner_lounge_kerala_one"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/owner_one_image_kerala"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/entire_team_title_kerala"
                android:layout_marginRight="8dp"
                 android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/owner_one_data_kerala"
                android:src="@raw/mohanlal" />

            <TextView
                android:id="@+id/owner_one_name_two_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/owner_one_image_kerala"
                android:layout_marginRight="3dip"
                android:layout_toRightOf="@+id/owner_one_data_kerala"
                android:paddingTop="1dip"
                android:singleLine="false"
                android:text="PADMASREE LT.COL.V.MOHANLAL"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <!-- Owner two -->

        <RelativeLayout
            android:id="@+id/owner_two_description_kerala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/owner_one_description_kerala"
            android:paddingLeft="5dp"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/owner_two_name_one_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="MS.LISSY PRIYADARSHAN"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_two_data_kerala"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_two_name_one_kerala"
                android:layout_marginLeft="2dp"
                android:text="@string/owner_lounge_kerala_two"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/owner_two_image_kerala"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/owner_two_data_kerala"
                android:src="@raw/lissy_priyadarshan" />

            <TextView
                android:id="@+id/owner_two_name_two_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/owner_two_image_kerala"
                android:layout_marginRight="3dip"
                android:layout_toRightOf="@+id/owner_two_data_kerala"
                android:paddingTop="1dip"
                android:singleLine="false"
                android:text="MS.LISSY PRIYADARSHAN"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <!-- Owner three -->

        <RelativeLayout
            android:id="@+id/owner_three_description_kerala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_two_description_kerala"
            android:paddingLeft="5dp"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/owner_three_name_one_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="MR.SHAJI"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/owner_three_data_kerala"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_three_name_one_kerala"
                android:layout_marginLeft="2dp"
                android:text="@string/owner_lounge_kerala_three"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/owner_three_image_kerala"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/owner_three_data_kerala"
                android:src="@raw/shaji" />

            <TextView
                android:id="@+id/owner_three_name_two_kerala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/owner_three_image_kerala"
                android:layout_marginRight="20dip"
                android:layout_toRightOf="@+id/owner_two_data_kerala"
                android:paddingTop="1dip"
                android:singleLine="false"
                
                android:text="MR.SHAJI"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>