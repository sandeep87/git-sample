<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_teams_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/teams"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#C0C0C0" />

    <android.support.v4.view.ViewPager
        android:id="@+id/teamlogo_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
         />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_team_indicator_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="25dp"
            android:src="@drawable/teams_indicator_bg" />

        <ImageView
            android:id="@+id/img_team_indicator_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="25dip"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="25dp"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="25dip"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="25dp"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_team_indicator_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="25dip"
            android:src="@drawable/teams_indicator_bg"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_team_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_team_indicator_one"
            android:background="@color/white"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/team_title" >

        <TextView
            android:id="@+id/txt_team_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
            android:text="@string/team_title"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/teammember_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:background="@drawable/content_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_ambassadors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ambassadors_title"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/teamowner_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:background="@drawable/content_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/teamownersbg" >

        <TextView
            android:id="@+id/txt_woner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>