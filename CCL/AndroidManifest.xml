<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ccl.ui"
    android:versionCode="8"
    android:versionName="2.1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <permission
        android:name="in.ccl.ui.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="in.ccl.ui.permission.C2D_MESSAGE" />

    <!-- App receives GCM messages. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ccl_logo"
        android:label="@string/app_name" >
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".PhotoAlbumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".VideoAlbumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".MenuItems"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".PhotoActivity"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".PhotoGalleryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".ScheduleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".ScoreBoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".TeamActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".OwnersLoungueActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".VideoGalleryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name="in.ccl.ui.DownloadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".LiveScoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name="in.ccl.ui.TestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name="in.ccl.ui.CalendarActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>

        <receiver
            android:name="in.ccl.logging.PeriodicLogUpload"
            android:process=":remote" >
        </receiver>
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="in.ccl.ui" />
            </intent-filter>
        </receiver>
        <!--
            No intent filters are specified, so android:exported defaults to "false". The
            service is only available to this app.
        -->
        <service
            android:name="in.ccl.database.CCLPullService"
            android:exported="false" />
        <service
            android:name="in.ccl.livescore.service.LiveScoreService"
            android:exported="false" />
        <service
            android:name="in.ccl.livescore.service.CheckUpdateService"
            android:exported="false" />
        <service android:name="in.ccl.ui.GCMIntentService" />
        <!--
            The attribute "android:exported" must be set to "false" to restrict this content
            provider to its own app. Otherwise, all apps could access it.
        -->
        <provider
            android:name="in.ccl.database.DataProvider"
            android:authorities="@string/authority"
            android:exported="false" />
    </application>

</manifest>