<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ccl.ui"
    android:versionCode="5"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ccl_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".PhotoAlbumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".VideoAlbumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".MenuItems"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".PhotoActivity"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".PhotoGalleryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".ScheduleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".ScoreBoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".TeamActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".OwnersLoungueActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".VideoGalleryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name=".NewsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name="in.ccl.ui.NewsDataActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>
        <activity
            android:name="in.ccl.ui.DownloadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimTheme" >
        </activity>

        <receiver
            android:name="in.ccl.logging.PeriodicLogUpload"
            android:process=":remote" >
        </receiver>
        <!--
            No intent filters are specified, so android:exported defaults to "false". The
            service is only available to this app.
        -->
        <service
            android:name="in.ccl.database.CCLPullService"
            android:exported="false" />

        <!--
            The attribute "android:exported" must be set to "false" to restrict this content
            provider to its own app. Otherwise, all apps could access it.
        -->
        <provider
            android:name="in.ccl.database.DataProvider"
            android:authorities="@string/authority"
            android:exported="false" />
    </application>

</manifest>