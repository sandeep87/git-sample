<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7" >

    <TextView
        android:id="@+id/sms_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/strap"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/sms_settings"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/sms_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms_settings"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/sms_location"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sms_location"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:button="@drawable/check_uncheck" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/sms_location"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/divider" />

    <TextView
        android:id="@+id/custom_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/custom_message"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_message"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_message"
        android:gravity="top"
        android:hint="@string/hint_message"
        android:lines="2"
        android:padding="5dp" />

    <TextView
        android:id="@+id/emergency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_message"
        android:layout_marginTop="10dp"
        android:background="@drawable/strap"
        android:padding="10dp"
        android:text="@string/emergency"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <ListView
        android:id="@+id/contacts_list"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/emergency"
        android:layout_marginTop="10dp"
        android:divider="@drawable/divider" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/twitter_save_btn"
        android:text="@string/save" />

</RelativeLayout>