<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.paradigmcreatives.activity"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="3" />
    <application android:name="com.paradigmcreatives.application.StationAlertApplication" android:icon="@drawable/icon_station_alert" android:label="@string/app_name">
    <uses-library android:name="com.google.android.maps" /> 
        <activity android:name="StationAlert" android:configChanges="orientation|keyboardHidden"
                  android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar"
                  android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MainActivity" android:theme="@android:style/Theme.NoTitleBar"
          android:configChanges="orientation|keyboardHidden" ></activity>
         <activity android:name="MapViewActivity" android:theme="@android:style/Theme.NoTitleBar"
         android:configChanges="orientation|keyboardHidden" android:windowSoftInputMode="stateVisible|adjustResize|adjustPan"></activity>
        <activity android:name="TabViewActivity" android:theme="@android:style/Theme.NoTitleBar" 
        android:configChanges="orientation|keyboardHidden"></activity>
        
        <activity android:name="AlarmActivity" android:configChanges="orientation|keyboardHidden"></activity>
       
         <service android:name="com.paradigmcreatives.service.AlertService"></service>
        
        <!-- <receiver android:name="com.paradigmcreatives.activity.receiver.ProximityIntentReceiver">
        	<action android:name= "com.paradigmcreatives.activity.TabViewActivity"></action>
        	<category android:name="com.paradigmcreatives.activity"></category>
        </receiver>  -->
        
    </application>
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /> 
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    
</manifest>