<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="horizontal">
		<TextView android:id="@+id/youareat"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:textStyle="bold"
			android:paddingLeft="25dp" android:layout_weight="0.5"
			android:background="@drawable/track_top_left_ld" android:textColor="@color/black">
		</TextView>
		<TextView android:id="@+id/youareat_data"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:layout_weight="0.5" android:paddingLeft="3dp"
			android:background="@drawable/track_top_right_ld" android:textColor="@color/black"
			android:maxLines="3">
		</TextView>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="horizontal">
		<TextView android:id="@+id/dest"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:textStyle="bold"
			android:paddingLeft="25dp" android:layout_weight="0.5"
			android:background="@drawable/track_middle_left_ld" android:textColor="@color/black">
		</TextView>
		<TextView android:id="@+id/dest_data"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:layout_weight="0.5" android:paddingLeft="3dp"
			android:background="@drawable/track_middle_right_ld" android:textColor="@color/black"
			android:maxLines="3">
		</TextView>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="horizontal">
		<TextView android:id="@+id/avg_speed"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:textStyle="bold"
			android:paddingLeft="25dp" android:layout_weight="0.5"
			android:background="@drawable/track_middle_left_ld" android:textColor="@color/black">
		</TextView>
		<TextView android:id="@+id/avg_speed_data"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:layout_weight="0.5" android:paddingLeft="3dp"
			android:background="@drawable/track_middle_right_ld" android:textColor="@color/black"
			android:maxLines="3">
		</TextView>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="horizontal">
		<TextView android:id="@+id/remaining_dist"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:textStyle="bold"
			android:paddingLeft="25dp" android:layout_weight="0.5"
			android:background="@drawable/track_middle_left_ld" android:textColor="@color/black">
		</TextView>
		<TextView android:id="@+id/remainig_dist_data"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:layout_weight="0.5" android:paddingLeft="3dp"
			android:background="@drawable/track_middle_right_ld" android:textColor="@color/black"
			android:maxLines="3">
		</TextView>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="horizontal">
		<TextView android:id="@+id/est_time_arrival"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:textStyle="bold"
			android:paddingLeft="25dp" android:layout_weight="0.5"
			android:background="@drawable/track_bottom_left_ld" android:textColor="@color/black">
		</TextView>
		<TextView android:id="@+id/est_time_arrival_data"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:maxHeight="63dp" android:layout_weight="0.5" android:paddingLeft="3dp"
			android:background="@drawable/track_bottom_right_ld" android:textColor="@color/black"
			android:maxLines="3">
		</TextView>
	</LinearLayout>

</LinearLayout>
