<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:id="@+id/cell"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingBottom="15dip" android:descendantFocusability="afterDescendants"
    android:focusable="false">

    <!-- We want to show the selection rect arround this image. We do it
        by setting a Selectable as the background image -->

    <ImageView android:src="@drawable/icon" android:id="@+id/thumbnail"
        android:layout_width="158dip" android:layout_height="110dip"
        android:scaleType="fitXY" android:paddingTop="2dip"
        android:paddingLeft="5dip" android:background="@drawable/selectable" />

    <TextView android:id="@+id/title" android:text="TextView"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:ellipsize="end" android:lines="1" android:textStyle="bold"
        android:gravity="left" android:textColor="@color/Title"
        android:paddingLeft="5dip" android:focusable="false" />

    <TextView android:id="@+id/subtitle" android:text="TextView"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="left" android:ellipsize="end" android:lines="1"
        android:textColor="@color/subTitle" android:paddingLeft="5dip"
        android:focusable="false" />
</LinearLayout>
